# Public path used by the browser to request the OpenAPI document.
NEXT_PUBLIC_OPENAPI_URL=/api/spec

# Server-only source loaded by /api/spec (local file path or absolute http/https URL).
OPENAPI_SPEC_SOURCE=

# Base URL of the authentication API (login/GetLoggedUser/LogoutUser).
AUTH_API_BASE_URL=

# Application name sent to the upstream auth API.
AUTH_APPLICATION_NAME=

# Optional fixed sessionId (mainly for mock-server request body matching).
# Leave empty in real environments to use random session IDs.
AUTH_DEMO_SESSION_ID=

# Secret used to encrypt/decrypt the session cookie (use a long random value).
AUTH_SESSION_SECRET=

# Cookie name for the encrypted auth session.
AUTH_SESSION_COOKIE_NAME=

# Inactivity timeout in minutes before automatic logout.
SESSION_INACTIVITY_MINUTES=30

# Minimum milliseconds before login form submission is accepted (anti-bot timing).
LOGIN_MIN_SUBMIT_MS=1200
